<div class="weather-details-{{ weather_details.plugin_id }} block-uuid-{{ weather_details.uuid }}">
  {% if weather_details %}
    <div>{{ weather_details.request.query }}</div>
    <div><img src="{{ weather_details.current.weather_icons[0] }}"/> {{ weather_details.current.weather_description }}</div>
    <div>{% trans %}Temperature:{% endtrans %} {{ weather_details.current.temperature }}°С ({% trans %}feels like{% endtrans %} {{ weather_details.current.feelslike }}°С)</div>
    <div>{% trans %}Wind{% endtrans %} {{ weather_details.current.wind_speed }} km/h</div>
    <div><a href="https://www.google.com/maps/place/{{ weather_details.location.lat }},{{ weather_details.location.lon }}">{% trans %}Geo coords{% endtrans %}</a></div>
    <div>{% trans %}Updated time{% endtrans %} {{ weather_details.updated_time }}</div>
  {% endif %}
</div>
<div class="weather-refresh-link">
  {% if weather_details %}
    <div>{{ weather_details.refresh_link }}</div>
  {% endif %}
</div>
